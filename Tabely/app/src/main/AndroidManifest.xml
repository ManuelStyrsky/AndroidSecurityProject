<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snakesonwheels.tabely">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity" />
        <activity
            android:name=".view.HomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".view.MenuActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".view.FilterActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".view.RestaurantListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".view.RestaurantDetailsActivity"
            android:label="@string/app_name" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.ConfirmActivity" />
        //this is for hockey
        <activity android:name="net.hockeyapp.android.UpdateActivity" />
        <activity android:name="net.hockeyapp.android.FeedbackActivity" />
        <activity android:name="net.hockeyapp.android.PaintActivity" />
        <activity android:name=".view.MyReservationsActivity" />
        <activity android:name=".view.OfferActivity"></activity>
    </application>

</manifest>